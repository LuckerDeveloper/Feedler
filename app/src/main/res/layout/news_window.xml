<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/PetronasColorLite"
    android:duplicateParentState="false"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:id="@+id/windowsMain"
    android:textColor="@color/Text"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"

        >

        <ImageView
            android:id="@+id/groupPhoto"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:src="@drawable/photo1"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/groupName"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="Группа андроид"
                    android:textStyle="normal|bold|italic"
                    android:textColor="@color/Text"
                    >
                </TextView>

                <Button
                    android:id="@+id/favoriteButton"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/PetronasColorLite"
                    android:scrollbarStyle="insideInset"
                    android:stateListAnimator="@null" />

            </LinearLayout>
            <TextView
                android:id="@+id/postTime"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="20:19"
                android:textColor="@color/Text"
                android:textStyle="normal|bold|italic"
                >
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/favorite"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageMainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/postText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorLink="@color/Link"
        android:layout_marginBottom="15dp"
        android:textColor="@color/Text"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:id="@+id/like"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:background="@drawable/favorite" />

        <TextView
            android:id="@+id/likesCount"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/circle"
            android:text="1000"
            android:textStyle="normal|bold|italic"
            android:paddingTop="4dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Text"
            />

        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:drawableRight="@drawable/ic_share_black_24dp"
            />

    </LinearLayout>

</LinearLayout>